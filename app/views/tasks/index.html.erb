<div>

  <h1>List our restaurants</h1>

<div class= "text">
  <%  @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
      <%if task.completed %>
        <h2><i class="fas fa-check"></i><%= task.title %></h2>
      <% else %>
        <h2><i class="far fa-square"></i><%= task.title %></h2>
      <% end %>
    <%end %>

    <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  <% end %>
</div>

</div>

